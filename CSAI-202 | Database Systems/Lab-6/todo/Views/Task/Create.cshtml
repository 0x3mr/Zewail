@model TodoTask

<!DOCTYPE html>
<html>
<head>
    <title>Create Task</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center">Create New Task</h3>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Create", "Task", FormMethod.Post))
                        {
                            <div class="mb-3">
                                @Html.LabelFor(m => m.Title, "Task Title", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(m => m.Description, "Description", new { @class = "form-label" })
                                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "3" })
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Create Task</button>
                                <a href="@Url.Action("Index", "Task")" class="btn btn-secondary">Back to List</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>